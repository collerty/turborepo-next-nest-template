{
  "name": "nextjs-shadcn-nestjs-prisma-zod-monorepo",
  "version": "0.0.1",
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "prettier": "^3.6.2",
    "turbo": "^2.5.4",
    "typescript": "5.7.3"
  },
  "overrides": {
    "@types/minimatch": "5.1.2"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "bun@1.2.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "prisma-generate": "cd apps/api && bun run generate",
    "build:api": "bun run prisma-generate && turbo build --filter=api",
    "dev": "turbo run dev --filter=./apps/web --filter=./apps/api --filter=./apps/docs",
    "dev:web+docs": "turbo run dev --filter=./apps/web --filter=./apps/docs",
    "dev:web": "turbo dev --filter=./apps/web",
    "dev:api": "turbo dev --filter=./apps/api",
    "dev:docs": "turbo dev --filter=./apps/docs",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "zod": "^4.0.5"
  }
}
